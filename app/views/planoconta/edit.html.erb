<!-- BEGIN PAGE CONTAINER -->
<div class="page-container" ng-view ng-controller="PlanocontaCtrl">
	<input type="hidden" id="planoconta" value="<%=@planoconta.to_json%>"/>	
	<input type="hidden" id="nivel1" value="<%=@nivel1%>"/>
	<input type="hidden" id="pai" value="<%=@pai.to_json%>"/>
	<!-- BEGIN PAGE HEAD -->
	<div class="page-head">
			<!-- END PAGE TITLE -->
			<!-- BEGIN PAGE CONTENT -->
		<div class="page-content">
			<div class="container">
				<!-- BEGIN PAGE BREADCRUMB -->
				<ul class="page-breadcrumb breadcrumb">
					<li>
						<%= link_to "Pagina Inicial", root_path, 'data-no-turbolink' => true %>
					</li>
					<i class="fa fa-circle"></i>
					<li>
						<%= link_to "Plano de Contas", planocontas_path, 'data-no-turbolink' => true %>
					</li>
					<i class="fa fa-circle"></i>
					<li class="active">
						Plano de Conta
					</li>
				</ul>
				<div class="col-md-12">
					<div class="profile-content">
						<div class="row">
							<div class="col-md-12">
								<div class="portlet light">
									<div class="portlet-title tabbable-line">
										<div class="caption caption-md">
											<i class="icon-globe theme-font hide"></i>
												<span class="caption-subject font-blue-madison bold uppercase">Plano de Conta</span>
											<i class="fa fa-plus"></i>
										</div>
										<div class="actions btn-set">									
											<%= link_to '<i class="fa fa-angle-left"></i> Voltar'.html_safe,planocontas_path, :type => "button",:name => "back",
											:class => "btn btn-default btn-circle", 'data-no-turbolink' => true %>													
											<button ng-click="save()" class="btn green-haze btn-circle"><i class="fa fa-check"></i> Gravar</button>
										</div>
									</div>
									<div id="error_explanation" class="Metronic-alerts alert alert-danger" ng-if="mensagens.length > 0">
										<ul ng-repeat="m in mensagens">
											 <li>{{m}}</li>
										</ul>
									</div>
									<form name="form_1" class="css-form" novalidate>

										<div class="portlet-body">
											<div ng-if="pai.id != null" class="form-group">												
												<label class="control-label ">Antecessor</label>											
												<input type="text" class='form-control placeholder-no-fix' value="{{pai.codigo}} - {{pai.descricao}}" disabled>		
											</div>
											<div class="form-group">
												<!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
												<label class="control-label ">Código</label>											
												<input type="text" name="codigo" ng-model='data.codigo' class='form-control placeholder-no-fix' disabled>
											</div>
											<div class="form-group">
												<!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
												<label class="control-label ">Descrição</label>
												<input ng-if="nivel1 === 'false'" type="text" name="descricao" ng-model='data.descricao' class='form-control placeholder-no-fix'>
												<div ng-if="nivel1 === 'true'" class="radio-list">
													<label class="radio-inline">
													<input type="radio" name="descricao" ng-model='data.descricao' value="Receita"> Receita </label>
													<label class="radio-inline">
													<input type="radio" name="descricao" ng-model='data.descricao' value="Despesa"> Despesa </label>
													<label class="radio-inline">
													<input type="radio" name="descricao" ng-model='data.descricao' value="Forma de Pagamento"> Forma de Pagamento </label>
												</div>
											</div>
										</div>
									</form>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
		<!-- END PAGE CONTENT -->
	</div>
</div> 
