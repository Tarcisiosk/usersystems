<!-- BEGIN PAGE CONTAINER -->
<div class="page-container" ng-view ng-controller="IndexCtrl" ng-cloak="" id="data" controller='<%=controller_name.pluralize.to_s%>' >

	<%if current_user.user_type == 2%>
		<div id="acessos" deletar='<%=current_user.nivelacesso.acessos.include?(Acesso.find_by_acao('tipoentidade#destroy'))%>' 
						  inativar='<%=current_user.nivelacesso.acessos.include?(Acesso.find_by_acao('tipoentidade#statusset'))%>'>
		</div>
	<%end%>
	
	<!-- BEGIN PAGE HEAD -->
	<div class="page-head">
		<!-- BEGIN PAGE CONTENT -->
		<div class="page-content">
			<div class="container">
			<!-- BEGIN SAMPLE PORTLET CONFIGURATION MODAL FORM-->
				<div class="modal fade" id="portlet-config" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
					<div class="modal-dialog">
						<div class="modal-content">
							<div class="modal-header">
								<button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
								<h4 class="modal-title">Escolher Colunas</h4>
							</div>
							<div class="modal-body">
								<div class="portlet light">
									<div class="row">
										<div class = "col-md-6">
											<div class="portlet-title">
												<div class="caption">
													<span class="caption-subject font-green-sharp bold uppercase">Colunas Inativas</span>
													<div>
														<%=select_tag 'I_columns[]', options_for_select(inact_columns.collect{|u| [u[:sTitle], u.to_s]}), {:class=> 'form-control', :id=>"Inativas", :size => "5", :disabled=>false} %>
														
													</div>
												</div>
											</div>
										</div>
										<div class = "col-md-6">
											<div class="portlet-title">
												<div class="caption">
													<span class="caption-subject font-green-sharp bold uppercase">Colunas Ativas</span>
													<div>
														<%=select_tag 'A_columns[]', options_for_select(act_columns.collect{|u| [u[:sTitle], u.to_s]}) , {:class=> 'form-control', :id=>"Ativas",  :size => "5", :disabled=>false}%>
													</div>
												</div>
											</div>
										</div>
									</div>
								</div>
							</div>
							<div class="modal-footer">
								<button type="button" class="btn blue" id="btnsave">Salvar</button>
								<button type="button" class="btn default" data-dismiss="modal">Cancelar</button>
							</div>
						</div>
						<!-- /.modal-content -->
					</div>
					<!-- /.modal-dialog -->
				</div>

				<!-- BEGIN PAGE BREADCRUMB -->
				<ul class="page-breadcrumb breadcrumb">
					<li>
						<%= link_to "Página Inicial", root_path, 'data-no-turbolink' => true %>
			  		</li>
			  		<i class="fa fa-circle"></i>
					<li class="active">
						Tipo Empresas/Contatos
					</li>
				</ul>
				<div class="row">
					<div class="col-md-12">
						<!-- BEGIN SAMPLE TABLE PORTLET-->
						<div class="portlet light">

							<div class="portlet-title">
								<div class="caption">
									<i class="fa fa-users font-green-sharp"></i>
									<span class="caption-subject font-green-sharp bold uppercase">Tipo Empresas/Contatos</span>
								</div>

								<div class="tools">
									<div class="btn-group">
										<%if current_user.nivelacesso.present? && current_user.nivelacesso.acessos.include?(Acesso.find_by_acao('tipoentidade#new')) && current_user.user_type == 2%>
											<a id="Novo" class="btn btn-icon-only green-meadow" data-no-turbolink="true" href="/tipoentidades/new"><i class="fa fa-plus"></i></a>
										<%elsif current_user.user_type == 1%>
											<a id="Novo" class="btn btn-icon-only green-meadow" data-no-turbolink="true" href="/tipoentidades/new"><i class="fa fa-plus"></i></a>
										<%elsif current_user.user_type == 0%>
											<a id="Novo" class="btn btn-icon-only green-meadow" data-no-turbolink="true" href="/tipoentidades/new"><i class="fa fa-plus"></i></a>
										<%end%>

										<a href="#portlet-config" data-toggle="modal" class="btn btn-icon-only blue" data-original-title="" title=""><i class="fa fa-wrench"></i></a>

										<div class="btn-group"> 
											<a id="Novo" class="btn btn purple-plum dropdown-toggle btn-select" data-toggle="dropdown" href="#">{{dataoptionselected}} <i class="fa fa-caret-down"></i></a>
								            <ul class="dropdown-menu">
								                <li><a href="#" ng-click="setDataOption('Ativos')">Ativos </a></li>
								                <li><a href="#" ng-click="setDataOption('Inativos')">Inativos </a></li>
								            </ul>
								        </div>
									</div>
								</div>
							</div>
							
							<div class="portlet-body" >
								<div ng-show="dataoptionselected == 'Ativos'">
									<table class="table table-striped table-bordered table-hover" data-source="/tipoentidades.json" id="tabela">
									</table>
								</div>

								<div ng-show="dataoptionselected == 'Inativos'">
									<table class="table table-striped table-bordered table-hover" data-source="/tipoentidades.json" id="tabelainact">
									</table>
								</div>
							</div>
						</div>
						<!-- END SAMPLE TABLE PORTLET-->
					</div>
				</div>
				<!-- END PAGE CONTENT INNER -->
			</div>
		</div>
		<!-- END PAGE CONTENT -->
	</div>
</div>	
<!-- END PAGE CONTAINER -->

<script>
jQuery(document).ready(function() 
{       
	var btnsave = document.getElementById('btnsave');
	btnsave.onclick = save;

	function save() 
	{
		var myOpts = document.getElementById('Ativas').options;
		var values = [];
		var values = $.map(myOpts, function(option) 
		{
			return option.value;
		});
		if(myOpts.length > 0)
		{
			$.ajax({
				type: 'post',
				url: '/tipoentidades/save_settings',
				dataType: 'json',
				data: {columns_tipoentidade : values}
			});
			window.location.reload();		
		}
		else
		{
			bootbox.alert("Escolha no mínimo uma coluna!");
		}
	}
});

</script>
