<!DOCTYPE html>
<html lang="en">
<%= render :partial => "layouts/shared/header"%>

<!-- BEGIN PAGE CONTAINER -->
<div class="page-container">
	<!-- BEGIN PAGE HEAD -->
	<div class="page-head">
	
		<!-- END PAGE TITLE -->
		<!-- BEGIN PAGE CONTENT -->
		<div class="page-content">
			<div class="container">
			<!-- BEGIN SAMPLE PORTLET CONFIGURATION MODAL FORM-->
				<div class="modal fade" id="portlet-config" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
					<div class="modal-dialog">
						<div class="modal-content">
							<div class="modal-header">
								<button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
								<h4 class="modal-title">Escolher Colunas</h4>
							</div>
							<div class="modal-body">
								<div class="portlet light">
									<div class="row">
										<div class = "col-md-6">
											<div class="portlet-title">
												<div class="caption">
													<span class="caption-subject font-green-sharp bold uppercase">Colunas Inativas</span>
													<div>
														<%=select_tag 'I_columns[]', options_for_select(inact_columns.collect{|u| [u[:sTitle], u.to_s]}), {:class=> 'form-control', :id=>"Inativas", :size => "5", :disabled=>false} %>
														
													</div>
												</div>
											</div>
										</div>
										<div class = "col-md-6">
											<div class="portlet-title">
												<div class="caption">
													<span class="caption-subject font-green-sharp bold uppercase">Colunas Ativas</span>
													<div>
														<%=select_tag 'A_columns[]', options_for_select(act_columns.collect{|u| [u[:sTitle], u.to_s]}) , {:class=> 'form-control', :id=>"Ativas",  :size => "5", :disabled=>false}%>
													</div>
												</div>
											</div>
										</div>
									</div>
								</div>
							</div>
							<div class="modal-footer">
								<button type="button" class="btn blue" id="btnsave">Salvar</button>
								<button type="button" class="btn default" data-dismiss="modal">Cancelar</button>
							</div>
						</div>
						<!-- /.modal-content -->
					</div>
					<!-- /.modal-dialog -->
				</div>

				<!-- BEGIN PAGE BREADCRUMB -->
				<ul class="page-breadcrumb breadcrumb">
					<li>
						<%= link_to "Página Inicial", root_path, 'data-no-turbolink' => true %>
			  		</li>
			  		<i class="fa fa-circle"></i>
					<li class="active">
						Tipo Empresas/Contatos
					</li>
				</ul>
				<div class="row">
					<div class="col-md-12">
						<!-- BEGIN SAMPLE TABLE PORTLET-->
						<div class="portlet light">

							<div class="portlet-title">
								<div class="caption">
									<i class="fa fa-users font-green-sharp"></i>
									<span class="caption-subject font-green-sharp bold uppercase">Tipo Empresas/Contatos</span>
								</div>
								
								<div class="tools">
									<div class="btn-group">
										<%if current_user.nivelacesso.present? && current_user.nivelacesso.acessos.include?(Acesso.find_by_acao('tipoentidade#new')) && current_user.user_type == 2%>
											<a class="btn btn-icon-only green-meadow" data-no-turbolink="true" href="/tipoentidades/new"><i class="fa fa-plus"></i></a>
										<%elsif current_user.user_type == 1%>
											<a class="btn btn-icon-only green-meadow" data-no-turbolink="true" href="/tipoentidades/new"><i class="fa fa-plus"></i></a>
										<%else%>
										<%end%>
											<!-- <%= link_to "Adicionar", new_user_path, :class => "btn btn-icon-only green"%>-->
											<a href="#portlet-config" data-toggle="modal" class="btn btn-icon-only blue" data-original-title="" title="">
											<i class="fa fa-wrench"></i>
										</a>
									</div>
								</div>
							</div>
							
							<div class="portlet-body">
								<div>
									<table class="table table-striped table-bordered table-hover" data-source="/tipoentidades.json" id="tabela">
									</table>
								</div>
							</div>
						</div>
						<!-- END SAMPLE TABLE PORTLET-->
					</div>
				</div>
				<!-- END PAGE CONTENT INNER -->
			</div>
		</div>
		<!-- END PAGE CONTENT -->
	</div>
</div>	
<!-- END PAGE CONTAINER -->
