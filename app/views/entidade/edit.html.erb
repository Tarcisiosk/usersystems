<!-- BEGIN PAGE CONTAINER -->
<div class="page-container" ng-view ng-controller="EntidadeCtrl">
	<!-- BEGIN PAGE HEAD -->
	<div class="page-head" >
		<!-- END PAGE TITLE -->
		<!-- BEGIN PAGE CONTENT -->
		<div class="page-content">
			<div class="container">
				<!-- BEGIN PAGE BREADCRUMB -->
				<ul class="page-breadcrumb breadcrumb">
					<li>
						 <%= link_to "Pagina Inicial", root_path, 'data-no-turbolink' => true %>
					</li>
					<i class="fa fa-circle"></i>
					<li>
						<%= link_to "Empresas/Contatos", entidades_path, 'data-no-turbolink' => true%>
					</li>
					<i class="fa fa-circle"></i>
					<li class="active">
						Editar
					</li>
				</ul>
				<div class="col-md-12">
					<div class="profile-sidebar" style="width: 250px;">
						<!-- PORTLET MAIN -->
						<div class="portlet light ">
							<div class="profile-usertitle-name">
								 Empresas
							</div>
							<div class="profile-desc-text">
								<div class="form-group">
									<div class="checkbox-list">
										<div ng-repeat="x in empresas_total" >
											<input type="checkbox" disabled ng-disabled="x.id == empresa_atual" ng-checked="x.id == empresa_atual || data.empresas.indexOf(x.id) > -1" ng-model='data.empresas[$index]' ng-true-value='{{x.id}}' class="checkboxes"> {{ x.nome_fantasia }} </input>
										</div>
									</div>
								</div>
							</div>
						</div>

						<!-- END PORTLET MAIN -->
						<div class="portlet light">
							<div class="profile-usertitle-name">
								 Tipos
							</div>
							<div class="profile-desc-text">
								<div class="form-group">
									<div class="checkbox-list">
										<div ng-repeat="t in tipos_total" >
											<input type="checkbox" ng-checked='data.tipoentidades.indexOf(t.id) > -1' ng-model='data.tipoentidades[$index]' ng-true-value='{{t.id}}' class="checkboxes" > {{ t.descricao }}</input>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>

					<div class="profile-content">
						<div class="row">
							<div class="col-md-12">
								<div class="portlet light">
								 	<div class="portlet-title tabbable-line">
										<div class="caption caption-md">
											<i class="icon-globe theme-font hide"></i>
												<span class="caption-subject font-blue-madison bold uppercase">Editar Empresa/Contato</span>
											<i class="fa fa-pencil"></i>
										</div>
										 <ul class="nav nav-tabs">
										 	<li class="active">
												<a href="#tab_1_1" data-toggle="tab">Informações Gerais</a>
											</li>
											<li>
												<a href="#tab_1_2" data-toggle="tab">Endereços</a>
											</li>
										</ul>
									</div>
									<div class="portlet-body">
										<%= form_for((@entidade), url: entidade_path(@entidade), html: { method: :put }) do |f|%>
											<% if @entidade.errors.any? %>
												<div id="error_explanation" class="Metronic-alerts alert alert-danger">
													<ul >
														<% @entidade.errors.full_messages.each do |message| %>
														 <li><%= message %></li>
													 <% end %>
													</ul>
												</div>
											<% end %>
										<% end %>

										<div class="tab-content">
											<div class="tab-pane active" id="tab_1_1">												
												<div class="form-group">
													<!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
													<label class="control-label ">Razao Social</label>
													<input type="text" name="razao_social" ng-model='data.razao_social' class='form-control placeholder-no-fix'>
												</div>

												<div class="form-group">
													<!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
													<label class="control-label ">Nome Fantasia</label>
													<input type="text" name="nome_fantasia" ng-model='data.nome_fantasia' class='form-control placeholder-no-fix'>
												</div>

												<div class="form-group">
													<!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
													<label class="control-label ">CNPJ</label>
													<input type="text" name="cnpj" ng-model='data.cnpj' class='form-control placeholder-no-fix'>
												</div>

												<div class="form-group">
													<!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
													<label class="control-label ">Inscrição Estadual</label>
													<input type="text" name="insc_estadual" ng-model='data.insc_estadual' class='form-control placeholder-no-fix'>
												</div>

												<div class="form-group">
													<!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
													<label class="control-label ">Inscrição Municipal</label>
													<input type="text" name="insc_municipal" ng-model='data.insc_municipal' class='form-control placeholder-no-fix'>
												</div>
											</div>
											<div class="tab-pane" id="tab_1_2">
												<div ng-repeat="e in data.endereco" >
													<div class="portlet">
														<div class="portlet-body">
															<div class="row">
																<div class="col-md-6">
																	<div class="form-group">
																		<label>CEP</label>
																		<input type="text" ng-model='e.cep' class='form-control placeholder-no-fix'>
																	</div>
																</div>
																<div class="col-md-12 ">
																	<div class="form-group">
																		<label>Rua</label>
																		<input type="text" ng-model='e.rua' class='form-control placeholder-no-fix'>
																	</div>
																</div>
															</div>
															<div class="row">
																<div class="col-md-6">
																	<div class="form-group">
																		<label>Numero</label>
																		<input type="text" ng-model='e.num_rua' class='form-control placeholder-no-fix'>
																	</div>
																</div>
																<!--/span-->
																<div class="col-md-6">
																	<div class="form-group">
																		<label>Complemento</label>
																		<input type="text" ng-model='e.complemento' class='form-control placeholder-no-fix'>
																	</div>
																</div>
																<!--/span-->
															</div>
															<!--/row-->
															<div class="row">
																<div class="col-md-6">
																	<div class="form-group">
																		<label>Bairro</label>
																		<input type="text" ng-model='e.bairro' class='form-control placeholder-no-fix'>
																	</div>
																</div>
																<!--/span-->
																
															
																<div class="col-md-6">
																	<div class="form-group">
																		<label>Cidade</label>
																		<input type="text" ng-model='e.cidade' class='form-control placeholder-no-fix'>
																	</div>
																</div>
																<!--/span-->
																<div class="col-md-6">
																	<div class="form-group">
																		<label>UF</label>
																	</div>
																</div>												
															</div>
														</div>
													</div>
												</div>
												<button ng-click="add_blank_end()" class="btn green-meadow">+</button><br><br>
											</div><br><br>

											<button ng-click="save()" class="btn yellow">Atualizar</button><br><br>
											<%= link_to "Voltar", entidades_path, :class => "btn default ", 'data-no-turbolink' => true %>

										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
		<!-- END PAGE CONTENT -->
	</div>
</div>  
</body>

<script>
myApp.controller('EntidadeCtrl', ['$scope', function($scope)
{
	$scope.data = <%= send_json.to_s.html_safe %>;
	$scope.tipos_total = <%=returnItensUsuario.to_json.to_s.html_safe%>
	$scope.empresas_total = <%=lastEmpTable.to_json.to_s.html_safe%>
	$scope.empresa_atual = <%=(current_user.settings(:last_empresa).edited).id%>

	console.log($scope.data);

   	$scope.save = function() {
    	var request;
    	request = $.ajax({
      		method: 'post',
      		url: '/entidades/save_angular/' + '<%= editingUser.id%>',
      		data: { data: $scope.data }
   	 	});
   	 	window.alert("Salvando");
   	 	console.log($scope.data);
	}

	$scope.add_blank_end = function()
	{
		var blank_end = {"rua":"","num_rua":"","cep":"","uf":"","cidade":"","bairro":""};
		$scope.data.endereco.push(blank_end);
	}
}]);

jQuery(document).ready(function() {       
	 // initiate layout and plugins
	Metronic.init(); // init metronic core components
	Layout.init(); // init current layout
	TableManaged.init();

	
	$("#campocnpj").mask("99.999.999/9999-99");
	$(".edit_entidade").submit(function() {
	 	$("#campocnpj").val($("#campocnpj").mask()); 
	});

	$('[name="emp_link"]').click(function () 
	{
		var id = $(this).attr('value');
		$.ajax
		({
			type: 'post',
			url: '/users/set_current_emp',
			data: {emp_id : id},
			success: function(msg) {
            window.location.reload(true);
        }
		});
	});
});

</script>
