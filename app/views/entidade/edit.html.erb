<html lang="en">
<%= render :partial => "layouts/shared/header"%>

<!-- BEGIN PAGE CONTAINER -->
<div class="page-container" ng-view>
	<!-- BEGIN PAGE HEAD -->
	<div class="page-head">
			<!-- END PAGE TITLE -->
			<!-- BEGIN PAGE CONTENT -->
		<div class="page-content">
			<div class="container">
				<!-- BEGIN PAGE BREADCRUMB -->
				<ul class="page-breadcrumb breadcrumb">
					<li>
						 <%= link_to "Pagina Inicial", root_path, 'data-no-turbolink' => true %>
					</li>
					<i class="fa fa-circle"></i>
					<li>
						<%= link_to "Empresas/Contatos", entidades_path, 'data-no-turbolink' => true%>
					</li>
					<i class="fa fa-circle"></i>
					<li class="active">
						Editar
					</li>
				</ul>

				<div class="col-md-12">
					<div class="profile-sidebar" style="width: 250px;">
						<!-- PORTLET MAIN -->
						<div class="portlet light ">
							<div class="profile-usertitle-name">
								 Empresas
							</div>
							<div class="profile-desc-text">
								<div class="form-group">
									<div class="checkbox-list">
										<% lastEmpTable.each_with_index do |item, index| %>
											<% if item == current_user.settings(:last_empresa).edited%>
												<input type="checkbox" checked class="checkboxes" value= "<%=item.id%>" disabled><%= item.nome_fantasia %></input><br>	
											<%else%>
												<input type="checkbox" class="checkboxes" value= "<%=item.id%>"><%= item.nome_fantasia %></input><br>	
											<%end%>
										<%end%>
									</div>
								</div>
							</div>
						</div>
						<!-- END PORTLET MAIN -->
						<div class="portlet light">
							<div class="profile-usertitle-name">
								 Tipos
							</div>
							<div class="profile-desc-text">
								<div class="form-group">
									<div class="checkbox-list">
										<% returnItensUsuario.each_with_index do |item, index| %>
											<%if index == 0%>
												<input type="checkbox" checked class="checkboxes" value= "<%=item.id%>" name='tipo'><%= item.descricao %></input><br>
											<%else%>
												<input type="checkbox" class="checkboxes" value= "<%=item.id%>" name='tipo'><%= item.descricao %></input><br>
											<%end%>
										<%end%>
									</div>
								</div>
							</div>
							
						</div>
					</div>

					<div class="container" ng-controller="EntidadeCtrl">
						<h1 class="text-center">???</h1>
						<div class="row" ng-repeat="entidade in data.entidades">
						    <h2>{{ entidade.razao_social }}</h2>
						    <p>{{ entidade.cnpj }}</p>
						</div>
					</div>

					<div class="profile-content">
						<div class="row">
							<div class="col-md-12">
								<div class="portlet light">
								 	<div class="portlet-title tabbable-line">
										<div class="caption caption-md">
											<i class="icon-globe theme-font hide"></i>
												<span class="caption-subject font-blue-madison bold uppercase">Editar Empresa/Contato</span>
											<i class="fa fa-pencil"></i>
										</div>
										 <ul class="nav nav-tabs">
										 	<li class="active">
												<a href="#tab_1_1" data-toggle="tab">Informações Gerais</a>
											</li>
											<li>
												<a href="#tab_1_2" data-toggle="tab">Endereços</a>
											</li>
										</ul>
									</div>
									<div class="portlet-body">
										<%= form_for((@entidade), url: entidade_path(@entidade), html: { method: :put }) do |f|%>
											<% if @entidade.errors.any? %>
												<div id="error_explanation" class="Metronic-alerts alert alert-danger">
													<ul >
														<% @entidade.errors.full_messages.each do |message| %>
														 <li><%= message %></li>
													 <% end %>
													</ul>
												</div>
											<% end %>
											<div class="tab-content">
												<div class="tab-pane active" id="tab_1_1">												
													<div class="form-group">
														<!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
														<label class="control-label ">Razao Social</label>
														<%= f.text_field :razao_social,  autofocus: true, :autocomplete => "on", :class =>"form-control placeholder-no-fix"%>
													</div>

													<div class="form-group">
														<!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
														<label class="control-label ">Nome Fantasia</label>
														<%= f.text_field :nome_fantasia,  autofocus: true, :autocomplete => "on", :class =>"form-control placeholder-no-fix"%>
													</div>

													<div class="form-group">
														<!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
														<label class="control-label ">CNPJ</label>
														<%= f.text_field :cnpj,  autofocus: true, :autocomplete => "on", :id =>"campocnpj", :class =>"form-control placeholder-no-fix"%>
													</div>

													<div class="form-group">
														<!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
														<label class="control-label ">Inscrição Estadual</label>
														<%= f.text_field :insc_estadual,  autofocus: true, :autocomplete => "on", :class =>"form-control placeholder-no-fix"%>
													</div>

													<div class="form-group">
														<!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
														<label class="control-label ">Inscrição Municipal</label>
														<%= f.text_field :insc_municipal,  autofocus: true, :autocomplete => "on", :class =>"form-control placeholder-no-fix"%>
													</div>
												</div>
												<div class="tab-pane" id="tab_1_2">
													<%= render :partial => "layouts/shared/enderecoform", :locals => { :f => f } %>

													<a href="entidade/add_end" data-toggle="modal" class="btn btn-icon-only green-meadow" data-original-title="" title=""><i class="fa fa-plus"></i></a>
												</div><br><br>
												<div class="actions">
													<left><%= f.submit "Atualizar", :class => "btn yellow" %></left>
												</div><br>
												<%= link_to "Voltar", entidades_path, :class => "btn default ", 'data-no-turbolink' => true %>
											</div>
										<% end %>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
		<!-- END PAGE CONTENT -->
	</div>
</div>  
