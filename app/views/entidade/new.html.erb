<!-- BEGIN PAGE CONTAINER -->
<div class="page-container">
	<!-- BEGIN PAGE HEAD -->
	<div class="page-head">
			<!-- END PAGE TITLE -->
			<!-- BEGIN PAGE CONTENT -->
		<div class="page-content">
			<div class="container">
				<!-- BEGIN PAGE BREADCRUMB -->
				<ul class="page-breadcrumb breadcrumb">
					<li>
						<%= link_to "Pagina Inicial", root_path, 'data-no-turbolink' => true %>
					</li>
					<i class="fa fa-circle"></i>
					<li>
						<%= link_to "Empresas/Contatos", entidades_path, 'data-no-turbolink' => true %>
					</li>
					<i class="fa fa-circle"></i>
					<li class="active">
						Novo
					</li>
				</ul>
				<div class="col-md-12">
					<div class="profile-content">
						<div class="row">
							<div class="col-md-12">
								<div class="portlet light">
									<div class="portlet-title tabbable-line">
										<div class="caption caption-md">
											<i class="icon-globe theme-font hide"></i>
												<span class="caption-subject font-blue-madison bold uppercase">Adicionar Empresa/Contato</span>
											<i class="fa fa-plus"></i>
										</div>
										<ul class="nav nav-tabs">
										 	<li class="active">
												<a href="#tab_1_1" data-toggle="tab">Informações Gerais</a>
											</li>
											<li>
												<a href="#tab_1_2" data-toggle="tab">Endereços</a>
											</li>
										</ul>
									</div>
									<div class="portlet-body">
										<%= form_for((@entidade), url: new_entidade_path, html: { method: :post }) do |f|%>
											<% if @entidade.errors.any? %>
												<div id="error_explanation" class="Metronic-alerts alert alert-danger">
													<ul >
														<% @entidade.errors.full_messages.each do |message| %>
														 <li><%= message %></li>
													 <% end %>
													</ul>
												</div>
											<% end %>
											<div class="tab-content">
												<div class="tab-pane active" id="tab_1_1">												
													<div class="form-group">
														<!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
														<label class="control-label ">Razao Social</label>
														<%= f.text_field :razao_social,  autofocus: true, :autocomplete => "on", :class =>"form-control placeholder-no-fix"%>
													</div>

													<div class="form-group">
														<!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
														<label class="control-label ">Nome Fantasia</label>
														<%= f.text_field :nome_fantasia,  autofocus: true, :autocomplete => "on", :class =>"form-control placeholder-no-fix"%>
													</div>

													<div class="form-group">
														<!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
														<label class="control-label ">CNPJ</label>
														<%= f.text_field :cnpj,  autofocus: true, :autocomplete => "on", :id =>"campocnpj", :class =>"form-control placeholder-no-fix"%>
													</div>

													<div class="form-group">
														<!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
														<label class="control-label ">Inscrição Estadual</label>
														<%= f.text_field :insc_estadual,  autofocus: true, :autocomplete => "on", :class =>"form-control placeholder-no-fix"%>
													</div>

													<div class="form-group">
														<!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
														<label class="control-label ">Inscrição Municipal</label>
														<%= f.text_field :insc_municipal,  autofocus: true, :autocomplete => "on", :class =>"form-control placeholder-no-fix"%>
													</div>

													<div class="row">
														<div class="col-md-6">
															<label class="caption-subject font-black bold uppercase">Tipo Empresa/Contato</label>
															<table class="table table-striped table-bordered table-hover" id="SimpleTable1" >
																<thead>
																	<tr>
																		<th class="" style="width: 24px;">			
																			<input type="checkbox" class="group-checkable" data-set="#SimpleTable .checkboxes"/>
																		</th>
																		<th>
																			Tipo
																		</th>
																	</tr>
																</thead>
																<tbody>
																	<% returnItensUsuario.each_with_index do |item, index| %>
																		<tr class="odd gradeX">
																			<td>
																				<input type="checkbox" class="checkboxes" value= "<%=item.id%>"/>
																			</td>
																			<td>
																				<%= item.descricao %>
																			</td>
																		</tr>
																	<%end%>
																</tbody>
															</table>
														</div>
														<div class="col-md-6">
															<label class="caption-subject font-black bold uppercase">Empresas Relacionadas</label>

															<table class="table table-striped table-bordered table-hover" id="SimpleTable2" >
																<thead>
																	<tr>
																		<th class="" style="width: 24px;">			
																			<input type="checkbox" class="group-checkable" data-set="#SimpleTable .checkboxes"/>
																		</th>
																		<th>
																			Tipo
																		</th>
																	
																	</tr>
																</thead>
																<tbody>
																	<% lastEmpTable.each_with_index do |item, index| %>
																		<tr class="odd gradeX">
																			<td>
																				<input type="checkbox" class="checkboxes" value= "<%=item.id%>"/>
																			</td>
																			<td>
																				<%= item.nome_fantasia %>
																			</td>
																		</tr>
																	<%end%>
																</tbody>
															</table>
														</div>
													</div>
												</div>
												<div class="tab-pane" id="tab_1_2">

												</div>
												<div class="actions">
													<%= f.submit "Gravar", :class => "btn green-meadow pull-left"%>
												</div><br><br><br>
												
												<%= link_to "Voltar", entidades_path, :class => "btn default ", 'data-no-turbolink' => true %>
											</div>
										<% end %>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
		<!-- END PAGE CONTENT -->
	</div>
</div>  

<script>
jQuery(document).ready(function() {       
	 // initiate layout and plugins
	Metronic.init(); // init metronic core components
	Layout.init(); // init current layout
	TableManaged.init();

	
	$('[name="emp_link"]').click(function () 
	{
		var id = $(this).attr('value');
		$.ajax({
			type: 'post',
			url: '/users/set_current_emp',
			data: {emp_id : id}
		});
	  	window.location.reload();		
	});
	
	$("#campocnpj").mask("99.999.999/9999-99");
	$(".new_entidade").submit(function() {
	 	$("#campocnpj").val($("#campocnpj").mask()); 
	});
