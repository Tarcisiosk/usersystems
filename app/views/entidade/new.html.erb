<!-- BEGIN PAGE CONTAINER -->
<div class="page-container" ng-view ng-controller="EntidadeCtrl">
	<!-- BEGIN PAGE HEAD -->
	<div class="page-head" >
		<!-- END PAGE TITLE -->
		<!-- BEGIN PAGE CONTENT -->
		<div class="page-content">
			<div class="container">
				<!-- BEGIN PAGE BREADCRUMB -->
				<ul class="page-breadcrumb breadcrumb">
					<li>
						 <%= link_to "Pagina Inicial", root_path, 'data-no-turbolink' => true %>
					</li>
					<i class="fa fa-circle"></i>
					<li>
						<%= link_to "Empresas/Contatos", entidades_path, 'data-no-turbolink' => true%>
					</li>
					<i class="fa fa-circle"></i>
					<li class="active">
						Novo
					</li>
				</ul>
				<div class="col-md-12">
					<div class="profile-sidebar" style="width: 250px;">
						<!-- PORTLET MAIN -->
						<div class="portlet light ">
							<div class="profile-usertitle-name">
								 Empresas
							</div>
							<div class="profile-desc-text">
								<div class="form-group">
									<div class="checkbox-list">
										<div ng-repeat="x in empresas_total" >
											<input type="checkbox" disabled ng-disabled="x.id == empresa_atual" ng-checked="x.id == empresa_atual || data.empresas.indexOf(x.id) > -1" ng-model='data.empresas[$index]' ng-true-value='{{x.id}}' class="checkboxes"> {{ x.nome_fantasia }} </input>
										</div>
									</div>
								</div>
							</div>
						</div>

						<!-- END PORTLET MAIN -->
						<div class="portlet light">
							<div class="profile-usertitle-name">
								 Tipos
							</div>
							<div class="profile-desc-text">
								<div class="form-group">
									<div class="checkbox-list">
										<div ng-repeat="t in tipos_total" >
											<input type="checkbox" ng-checked='data.tipoentidades.indexOf(t.id) > -1' ng-model='data.tipoentidades[$index]' ng-true-value='{{t.id}}' class="checkboxes" > {{ t.descricao }}</input>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>

					<div class="profile-content">
						<div class="row">
							<div class="col-md-12">
								<div class="portlet light">
								 	<div class="portlet-title ">
										<div class="caption caption-md">
											<i class="icon-globe theme-font hide"></i>
											<span class="caption-subject font-blue-madison bold uppercase">Novo(a) Empresa/Contato</span><i class="fa fa-pencil"></i>
										</div>
										<div class="actions btn-set">
											<%= link_to "Voltar", entidades_path, :class => "btn default btn-circle ", 'data-no-turbolink' => true %>
											<button ng-click="save()" class="btn green-meadow btn-circle"><i class="fa fa-check"></i> Salvar</button><br>
										</div>
									</div>
									<div class="portlet-body ">
										<ul class="nav nav-tabs">
										 	<li class="active">
												<a href="#tab_1_1" data-toggle="tab">Informações Gerais</a>
											</li>
											<li>
												<a href="#tab_1_2" data-toggle="tab">Endereços</a>
											</li>
										</ul>
										<div class="tab-content">
											<div class="tab-pane active" id="tab_1_1">	
												<form name="form_1" class="css-form" novalidate>
													<div class="form-group">
														<!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
														<label class="control-label ">Razao Social</label>
														<input type="text" name="razao_social" ng-model='data.razao_social' class='form-control placeholder-no-fix'>
													</div>

													<div class="form-group">
														<!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
														<label class="control-label ">Nome Fantasia</label>
														<input type="text" name="nome_fantasia" ng-model='data.nome_fantasia' class='form-control placeholder-no-fix'>
													</div>

													<div class="form-group">
														<!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
														<label class="control-label ">CNPJ</label>
														<input type="text" name="cnpj" id="campocnpj" ng-model='data.cnpj' minlength="14" maxlength="14" numbers-only="numbers-only" class='form-control placeholder-no-fix'>

													</div>

													<div class="form-group">
														<!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
														<label class="control-label ">Inscrição Estadual</label>
														<input type="text" name="insc_estadual" minlength="10" ng-model='data.insc_estadual' maxlength="10" numbers-only="numbers-only" class='form-control placeholder-no-fix'>
													</div>

													<div class="form-group">
														<!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
														<label class="control-label ">Inscrição Municipal</label>
														<input type="text" name="insc_municipal" ng-model='data.insc_municipal' minlength="10" maxlength="10" numbers-only="numbers-only" class='form-control placeholder-no-fix'>
													</div>
												</form>
											</div>
											<div class="tab-pane" id="tab_1_2">
												<form name="form_2" class="css-form" novalidate>
													<div ng-repeat="e in data.endereco" >
														<div class="portlet">
															<div class="portlet-body">
																<div class="row">
																	<div class="col-md-6">
																		<div class="form-group">
																			<label>CEP</label>
																			<input type="text" ng-model='e.cep' name="cep" maxlength="8" ng-blur="find_cep(e.cep, $index)" numbers-only="numbers-only" class='form-control placeholder-no-fix'>
																		</div>
																	</div>
																</div>

																<div class="row">
																	<div class="col-md-12 ">
																		<div class="form-group">
																			<label>Rua</label>
																			<input type="text" ng-model='e.rua' name="rua" class='form-control placeholder-no-fix'>
																		</div>
																	</div>
																</div>
																<div class="row">
																	<div class="col-md-6">
																		<div class="form-group">
																			<label>Numero</label>
																			<input type="text" ng-model='e.num_rua' numbers-only="numbers-only" name="num_rua" class='form-control placeholder-no-fix'>
																		</div>
																	</div>
																	<div class="col-md-6">
																		<div class="form-group">
																			<label>Complemento</label>
																			<input type="text" ng-model='e.complemento' name="complemento" class='form-control placeholder-no-fix'>
																		</div>
																	</div>
																</div>

																<div class="row">
																	<div class="col-md-6">
																		<div class="form-group">
																			<label>Bairro</label>
																			<input type="text" ng-model='e.bairro' name="bairro" class='form-control placeholder-no-fix'>
																		</div>
																	</div>
																	<div class="col-md-6">
																		<div class="form-group">
																			<label>Cidade</label>
																			<input type="text" ng-model='e.cidade' name="cidade" class='form-control placeholder-no-fix'>
																		</div>
																	</div>
																	<div class="col-md-6">
																		<div class="form-group">
																			<label>UF</label>
																			<select ng-model="e.uf" class ="form-control">
																				<option ng-repeat="estado in estados_total" value="{{estado.uf}}">{{estado.descricao}}</option>
																			</select>
																		</div>
																	</div>												
																</div>
															</div>
														</div>
													</div>
													<button ng-click="add_blank_end()" ng-disabled='!form_2.cep.$dirty' class="btn green-meadow btn circle"><i class="fa fa-plus"></i></button><br><br>
												</form>
											</div><br><br>

										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
		<!-- END PAGE CONTENT -->
	</div>
</div>  
</body>

<script>
myApp.controller('EntidadeCtrl', ['$scope', function($scope)
{
	$scope.data = <%= send_json.to_s.html_safe %>;
	$scope.tipos_total = <%=returnItensUsuario.to_json.to_s.html_safe%>
	$scope.empresas_total = <%=lastEmpTable.to_json.to_s.html_safe%>
	$scope.empresa_atual = <%=(current_user.settings(:last_empresa).edited).id%>
	$scope.estados_total = <%=returnAllEstados.to_json.to_s.html_safe%>

	console.log($scope.data);
	console.log($scope.estados_total);

   	$scope.save = function() {
    	var request;
    	request = $.ajax({
      		method: 'post',
      		url: '/entidades/save_angular/' + '<%= editingUser.id%>',
      		data: { data: $scope.data }
   	 	});
		window.location.replace('/entidades');
   	 	console.log($scope.data);
	}

	$scope.find_cep = function(cep, id)
	{
		$.getJSON("//viacep.com.br/ws/"+ cep +"/json/?callback=?", function(dados) 
		{
            if (!("erro" in dados)) {
                //Atualiza os campos com os valores da consulta.
                $("[name=rua]").val(dados.logradouro);
                $("[name=bairro]").val(dados.bairro);
                $("[name=cidade]").val(dados.localidade);

                $scope.data.endereco[id].rua =  dados.logradouro;
                $scope.data.endereco[id].bairro =  dados.bairro;
                $scope.data.endereco[id].cidade =  dados.localidade;

               // $("#uf").val(dados.uf);
            } //end if.
            else 
            {
                alert("CEP não encontrado.");
            }
        });
	}

	$scope.add_blank_end = function()
	{
		var blank_end = {"rua":"","num_rua":"","cep":"","uf":"","cidade":"","bairro":""};
		$scope.data.endereco.push(blank_end);
	}

	$scope.add_blank_end();

}]);


jQuery(document).ready(function() {       
	 // initiate layout and plugins
	Metronic.init(); // init metronic core components
	Layout.init(); // init current layout
	TableManaged.init();

	
	$("#campocnpj").mask("99.999.999/9999-99");
	$(".edit_entidade").submit(function() {
	 	$("#campocnpj").val($("#campocnpj").mask()); 
	});


});

</script>
