<script>
jQuery(document).ready(function() {       
	// initiate layout and plugins
	Metronic.init(); // init metronic core components
	Layout.init(); // init current layout

	var btnsave = document.getElementById('btnsave');
	btnsave.onclick = save;

	function save() 
	{
		var myOpts = document.getElementById('Ativas').options;
		var values = [];
		var values = $.map(myOpts, function(option) {
			return option.value;
		});
		if(myOpts.length > 0)
		{
			$.ajax({
				type: 'post',
				url: '/users/save_settings',
				dataType: 'json',
				data: {columns_user : values}
			});
			window.location.reload();		
		}
		else
		{
			bootbox.alert("Escolha no mínimo uma coluna!");
		}
	}

	function show_restricted_alert()
	{
		bootbox.alert("Você não tem permissão para isso!");	
	} 	

	$('[name="emp_link"]').click(function () 
	{
		var id = $(this).attr('value');
		$.ajax({
			type: 'post',
			url: '/users/set_current_emp',
			data: {emp_id : id}
		});
	  	window.location.reload();		
	});
});

</script>
