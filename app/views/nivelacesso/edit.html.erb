<!-- BEGIN PAGE CONTAINER -->
<div class="page-container" ng-cloak="">
	<!-- BEGIN PAGE HEAD -->
	<div class="page-head">
			<!-- END PAGE TITLE -->
			<!-- BEGIN PAGE CONTENT -->
		<div class="page-content">
			<div class="container">
				<!-- BEGIN PAGE BREADCRUMB -->
				<ul class="page-breadcrumb breadcrumb">
					<li>
						 <%= link_to "Pagina Inicial", root_path, 'data-no-turbolink' => true %>
					</li>
					<i class="fa fa-circle"></i>
					<li>
						<%= link_to "Nivel Acesso", nivelacessos_path, 'data-no-turbolink' => true%>
					</li>
					<i class="fa fa-circle"></i>
					<li class="active">
						Editar
					</li>
				</ul>

				<div class="col-md-12">

				 
					<div class="profile-content">
						<div class="row">
							<div class="col-md-12">
								<div class="portlet light">
								 <div class="portlet-title tabbable-line">
										<div class="caption caption-md">
											<i class="icon-globe theme-font hide"></i>
												<span class="caption-subject font-blue-madison bold uppercase">Editar Nivel de Acesso</span>
											<i class="fa fa-pencil"></i>
										</div>
									</div>
									<div class="portlet-body">
										<div class="tab-content">
											<div class="tab-pane active" id="tab_1_1">
												<%= form_for((@nivelacesso), url: nivelacesso_path(@nivelacesso), html: { method: :put }) do |f|%>
													<% if @nivelacesso.errors.any? %>
														<div id="error_explanation" class="Metronic-alerts alert alert-danger">
															<ul >
																<% @nivelacesso.errors.full_messages.each do |message| %>
																 <li><%= message %></li>
															 <% end %>
															</ul>
														</div>
													<% end %>
													
													<div class="form-group">
														<!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
														<label class="control-label ">Descrição</label>
														<%= f.text_field :descricao,  autofocus: true, :autocomplete => "on", :class =>"form-control placeholder-no-fix"%>
													</div>
													<div class="actions">
														<left><%= f.submit "Atualizar", :class => "btn yellow" %></left>
													</div><br>
													<%= link_to "Voltar", nivelacessos_path, :class => "btn default ", 'data-no-turbolink' => true %>
												<% end %>
											</div>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div> 
				</div>
			</div>
		</div>
		<!-- END PAGE CONTENT -->
	</div>
</div>  

<script>
jQuery(document).ready(function() 
{       
	$('#pictureInput').on('change', function(event) {
		var files = event.target.files;
		var image = files[0]
		var reader = new FileReader();
		reader.onload = function(file) {
			var img = new Image();
			console.log(file);
			img.src = file.target.result;
			$('#target').html(img);
		}
		reader.readAsDataURL(image);
		console.log(files);
	});
});

</script>