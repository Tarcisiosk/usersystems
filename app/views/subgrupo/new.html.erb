<!-- BEGIN PAGE CONTAINER -->
<div class="page-container">
	<!-- BEGIN PAGE HEAD -->
	<div class="page-head">
			<!-- END PAGE TITLE -->
			<!-- BEGIN PAGE CONTENT -->
		<div class="page-content">
			<div class="container">
				<!-- BEGIN PAGE BREADCRUMB -->
				<ul class="page-breadcrumb breadcrumb">
					<li>
						<%= link_to "Pagina Inicial", root_path, 'data-no-turbolink' => true %>
					</li>
					<i class="fa fa-circle"></i>
					<li>
						<%= link_to "Sub-Grupos", sub_grupos_path, 'data-no-turbolink' => true %>
					</li>
					<i class="fa fa-circle"></i>
					<li class="active">
						Novo
					</li>
				</ul>
				<div class="col-md-12">
					<div class="portlet light">
						<div class="portlet-title tabbable-line">
							<div class="caption caption-md">
								<i class="fa fa-plus"></i>
									<span class="caption-subject font-blue-madison bold uppercase">Novo Sub-Grupo</span>
							</div>
						</div>
							<div class="portlet-body">
							<%= form_for((@subgrupo), url: new_sub_grupo_path, html: { method: :post }) do |f|%>
								<% if @subgrupo.errors.any? %>
									<div id="error_explanation" class="Metronic-alerts alert alert-danger">
										<ul>
											<% @subgrupo.errors.full_messages.each do |message| %>
											 <li><%= message %></li>
										 <% end %>
										</ul>
									</div>
								<% end %>
								<%if returnItensUsuario.count > 0 %>
									<div class="form-group">
										<!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
										<label class="control-label ">Descrição</label>
										<%= f.text_field :descricao,  autofocus: true, :autocomplete => "on", :class =>"form-control placeholder-no-fix"%>
									</div>

									<div class="form-group">
										<label class="control-label">Grupo</label><br>
										<%= f.select(:grupo_id, [], {}, {:class => 'form-control input-medium select2me', :id => 'select2_grupo'}) do %>
											  <% returnItensUsuario.each do |c| %>
											    	<%= content_tag(:option, c.descricao, value: c.id) %>
											  <% end %>
										<% end %>
									</div><br>
								
									<div class="actions">
											<%= f.submit "Gravar", :class => "btn green-meadow pull-left"%>
									</div><br><br><br>
								<%else%>
									<span class="caption-subject font-red bold uppercase">Crie um Grupo antes de criar um Sub-grupo.</span><br><br>
								<%end%>
										
								<%= link_to "Voltar", sub_grupos_path, :class => "btn default ", 'data-no-turbolink' => true %>
							<% end %>
						</div>
					</div>
				</div>
			</div>
		</div>
		<!-- END PAGE CONTENT -->
	</div>
</div>  
<!-- END PAGE CONTAINER -->

