<html lang="en">
<%= render :partial => "layouts/shared/header"%>
<!-- BEGIN PAGE CONTAINER -->
<div class="page-container">
	<!-- BEGIN PAGE HEAD -->
	<div class="page-head">
			<!-- END PAGE TITLE -->
			<!-- BEGIN PAGE CONTENT -->
		<div class="page-content">
			<div class="container">
				<!-- BEGIN PAGE BREADCRUMB -->
				<ul class="page-breadcrumb breadcrumb">
					<li>
						 <%= link_to "Pagina Inicial", root_path, 'data-no-turbolink' => true %>
					</li>
					<i class="fa fa-circle"></i>
					<li>
						<%= link_to "Sub-Grupos", sub_grupos_path, 'data-no-turbolink' => true%>
					</li>
					<i class="fa fa-circle"></i>
					<li class="active">
						Editar
					</li>
				</ul>

				<div class="col-md-12">

				 
					<div class="profile-content">
						<div class="row">
							<div class="col-md-12">
								<div class="portlet light">
								 <div class="portlet-title tabbable-line">
										<div class="caption caption-md">
											<i class="icon-globe theme-font hide"></i>
												<span class="caption-subject font-blue-madison bold uppercase">Editar Sub-Grupo</span>
											<i class="fa fa-pencil"></i>
										</div>
									</div>
									<div class="portlet-body">
										<div class="tab-content">
											<div class="tab-pane active" id="tab_1_1">
												<%= form_for((@subgrupo), url: subgrupo_path(@subgrupo), html: { method: :put }) do |f|%>
													<% if @subgrupo.errors.any? %>
														<div id="error_explanation" class="Metronic-alerts alert alert-danger">
															<ul >
																<% @subgrupo.errors.full_messages.each do |message| %>
																 <li><%= message %></li>
															 <% end %>
															</ul>
														</div>
													<% end %>
													
													<div class="form-group">
														<!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
														<label class="control-label ">Descrição</label>
														<%= f.text_field :descricao,  autofocus: true, :autocomplete => "on", :class =>"form-control placeholder-no-fix"%>
													</div>
											 		
						
											 		<div class="form-group">
														<label class="control-label col-md-2">Grupo</label><br><br>
														<%= f.select(:grupo_id, [], {}, {:class => 'form-control input-medium select2me', :id => 'select2_grupo'}) do %>
															  <% returnItensUsuario.each do |c| %>
															    <%= content_tag(:option, c.descricao, value: c.id) %>
															  <% end %>
														<% end %>
													</div><br>

													<div class="actions">
														<left><%= f.submit "Atualizar", :class => "btn yellow" %></left>
													</div><br>
													<%= link_to "Voltar", sub_grupos_path, :class => "btn default ", 'data-no-turbolink' => true %>
												<% end %>
											</div>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div> 
				</div>
			</div>
		</div>
		<!-- END PAGE CONTENT -->
	</div>
</div>  
<!-- END PAGE CONTAINER -->

